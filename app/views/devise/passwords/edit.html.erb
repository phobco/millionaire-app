<div class="row justify-content-md-center">
  <div class="col-md-4 justify-content-center">
  <h3 class="text-center mb-3"><%= t('.change_my_password') %></h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label t('.new_password'), class: 'form-label' %>
      <% if @minimum_password_length %>
        <em>(<%= t('.password_length', count: @minimum_password_length) %>)</em>
      <% end %>
      <%= f.password_field :password, placeholder: t('.enter_new_password'), class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label t('.confirm_new_password'), class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="actions mt-4 d-grid gap-2">
      <%= f.submit t('.change_your_password'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
