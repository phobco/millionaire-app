<div class="row justify-content-md-center">
  <div class="col-md-4 justify-content-center">
    <h2 class="text-center mb-3"><%= t('.edit') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-2">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: 'form-control' %>
      </div>

      <div class="field mb-2">
        <%= f.label t('.name') %>
        <%= f.text_field :name, autofocus: true, placeholder: :email, class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mb-2">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: t('.new_password'), class: 'form-control' %>
        <% if @minimum_password_length %>
          <em><%= t('.password_length', count: @minimum_password_length) %></em>
        <% end %>
      </div>

      <div class="field mb-2">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('.confirm_new_password'),class: 'form-control' %>
      </div>

      <div class="field mb-2">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions mt-4 d-grid gap-2">
        <%= f.submit t('.update'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h3 class="mt-5 mb-3"><%= t('.cancel_my_account') %></h3>

    <%= button_to t('.delete'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn btn-danger btn-sm mb-3' %>

    <%= link_to t('.back'), :back, class: 'link-light' %>
  </div>
</div>
