<div class="row justify-content-md-center">
  <div class="col-md-4 justify-content-center align-items-center">
    <h2 class="text-center mb-3"><%= t('.log_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-2">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control' %>
      </div>

      <div class="field mb-2">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: t('.password'), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-3 d-grid gap-2">
        <%= f.submit t('.log_in'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
